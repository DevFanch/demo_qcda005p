{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des cours</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for course in courses %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ course.name }}</h5>
                        <p class="card-text mb-1">
                            <strong>Durée :</strong> {{ course.duration }} jour{{ course.duration > 1 ? 's' : '' }}<br>
                            <strong>Date de création :</strong> {{ course.dateCreated | date('d/m/Y') }}<br>
                            <strong>Catégorie :</strong> {{ course.category ? course.category.name : '?' }}<br>
                            <strong>Formateurs :</strong> {{ course.trainers | length }}<br>
                            <strong>Publié :</strong> {{ course.published ? 'Oui' : 'Non' }}
                        </p>
                        <a href="{{ path('course_show', {'id': course.id}) }}" class="btn btn-primary mt-2" title="Voir ce cours">Voir ce cours</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">
                    Aucune donnée dans la base.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block title %}
Les cours | {{ parent() }}
{% endblock %}
